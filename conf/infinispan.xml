<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:6.0 http://www.infinispan.org/schemas/infinispan-config-6.0.xsd"
        xmlns="urn:infinispan:config:6.0">

    <global>

        <transport clusterName="ispn-perf-test" transportClass="org.perf.CustomTransport" >
            <properties>
                <property name="configurationFile" value="local.xml"/>
            </properties>
        </transport>

    </global>

    <default>
        <locking concurrencyLevel="1000" lockAcquisitionTimeout="1000" useLockStriping="true" isolationLevel="READ_COMMITTED"/>
        <jmxStatistics enabled="true"/>
        <clustering mode="distribution">
            <hash numOwners="2"/>
            <sync/>
        </clustering>
    </default>

    <namedCache name="clusteredCache">
        <locking concurrencyLevel="1000" lockAcquisitionTimeout="5000" useLockStriping="true" isolationLevel="READ_COMMITTED"/>
        <clustering mode="distribution">
            <stateTransfer awaitInitialTransfer="false"/>
            <hash numOwners="2"/>
            <sync replTimeout="10000"/>
        </clustering>

        <!-- Uncomment the config below to get a non-transactional cache  /-->
        <transaction transactionMode="TRANSACTIONAL" lockingMode="OPTIMISTIC" />

    </namedCache>

</infinispan>